<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.xiaoxi.tianjia.ChuangjianqunActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        >

        <Button
            android:id="@+id/bt_left"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@mipmap/fanhui"></Button>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建群聊"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_22"
            android:textStyle="bold">
        </TextView>




    </RelativeLayout>

    <LinearLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>


    <ImageView
        android:src="@drawable/a"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70">

    </ImageView>

    <EditText
        android:id="@+id/et_name"
        android:layout_marginTop="@dimen/dp_50"
        android:hint="创建群组的名称"
        android:layout_gravity="center"
        android:background="@drawable/edit_text1"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_40">

    </EditText>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/endit"
        android:layout_marginRight="@dimen/dp_20">

        <EditText
            android:id="@+id/et_jieshao"
            android:hint="介绍一下你的群让更多人加入"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:background="@drawable/edit_text5"
            android:gravity="start"
            android:paddingLeft="@dimen/dp_10"

            android:textSize="@dimen/sp_12"
            android:paddingRight="@dimen/dp_10"
            android:inputType="textMultiLine"/>

    </RelativeLayout>


    <Button
        android:background="@drawable/blue"
        android:id="@+id/tijiao"
        android:text="创建"
        android:layout_margin="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>


</LinearLayout>