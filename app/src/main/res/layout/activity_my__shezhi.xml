<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical"
    tools:context=".activity.zixun.My_Shezhi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/dp_33"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:text="设置"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/yuan3"
        android:layout_height="@dimen/dp_200">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gezi3"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="头像"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/shezhi_hea"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gezi3"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="昵称"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/shezhi_name"/>


            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/gezi3">

                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="性别"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/shezhi_sex"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/gezi3">

                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="签名"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/shezhi_style"/>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/yuan3"
        android:layout_height="@dimen/dp_150">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gezi3"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="生日"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/shezhi_sr"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gezi3"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="电话"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/shezhi_phone"/>


            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/gezi3">

                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="邮箱"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/shezhi_Email"/>

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/yuan3"
        android:layout_height="@dimen/dp_220">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gezi3"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="积分"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    android:id="@+id/shezhi_jf"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gezi3"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="VIP"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/shezhi_vip"/>


            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/gezi3">

                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="faceID"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/shezhi_faceid"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/gezi3">

                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="微信绑定"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/shezhi_wx"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/gezi3">

                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="0dp"
                    android:text="退出登录"
                    android:textSize="@dimen/dp_20"
                    android:textColor="#f00"
                    android:id="@+id/call_login"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="修改密码"
                    android:textSize="@dimen/dp_20"
                    android:layout_height="@dimen/dp_50"
                    android:textColor="#f00"
                    android:id="@+id/xiugaimima"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    </LinearLayout>