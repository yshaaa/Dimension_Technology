<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    

    
    <LinearLayout
        android:background="@drawable/gezi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_16"
            android:id="@+id/tiezi_comment"/>

        <ImageView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tiezi_ima"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:text="time"
                android:textSize="@dimen/dp_22"
                android:layout_height="wrap_content"
                android:id="@+id/tiezi_time"/>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/zan_b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_22"
                    android:id="@+id/zan_number"/>

                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/xx1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/dp_22"
                    android:layout_height="wrap_content"
                    android:id="@+id/xx_number"/>


            </LinearLayout>





        </LinearLayout>

    </LinearLayout>



</LinearLayout>