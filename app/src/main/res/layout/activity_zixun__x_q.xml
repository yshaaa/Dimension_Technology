<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.zixun.Zixun_XQ">

    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyc_zixun_xq"/>

            <TextView
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_30"
                android:text="推荐"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyc_Xq_tuijian"/>

            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="评论"/>

            <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyc_Zixun_pl_liebiao"/>

        </LinearLayout>
        
    </ScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="5"
            android:hint="请输入评论类容"
            android:layout_height="wrap_content"
            android:id="@+id/zixun_pl_edit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zixun_pl_btn"
            android:text="发送"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_33">

                <RelativeLayout
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33">

                    <ImageView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="@dimen/dp_25"
                        android:background="@drawable/xx1"
                        android:id="@+id/zixun_xq_pl_ima"
                        android:layout_height="@dimen/dp_25"
                        />
                    <TextView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:textColor="#f00"
                        android:id="@+id/zixun_xq_pl_number"
                        />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_33">
                <ImageView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="@dimen/dp_25"
                    android:background="@drawable/zan_1"
                    android:id="@+id/zixun_xq_zan_ima"
                    android:layout_height="@dimen/dp_25"
                    />
                <TextView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"

                    android:textColor="#f00"
                    android:id="@+id/zixun_xq_zan_number"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_33">

                <ImageView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="@dimen/dp_25"
                    android:background="@drawable/ax1"
                    android:id="@+id/zixun_xq_ax_ima"
                    android:layout_height="@dimen/dp_25"
                    />
                <TextView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:textColor="#f00"

                    android:id="@+id/zixun_xq_ax_number"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_33">

                <ImageView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="@dimen/dp_25"
                    android:background="@drawable/share"
                    android:layout_height="@dimen/dp_25"
                    android:id="@+id/zixun_xq_share_ima"
                    />
                <TextView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:textColor="#f00"
                    android:id="@+id/zixun_xq_share_number"

                    />

            </LinearLayout>
            


        </LinearLayout>


    </LinearLayout>




</LinearLayout>