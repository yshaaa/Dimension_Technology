<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/drawerLayout"
    tools:context=".MainActivity">



<!--    <androidx.drawerlayout.widget.DrawerLayout-->
<!--        android:id="@+id/drawerLayout"-->
<!--        android:layout_width="@dimen/dp_200"-->
<!--        android:layout_height="match_parent"-->
<!--        >-->


<!--    </androidx.drawerlayout.widget.DrawerLayout>-->




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frag"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <RadioGroup
            android:id="@+id/rg1"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/z"
                android:text="资讯"
                android:textSize="28dp"
                android:checked="true"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/radio1"
                />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="28dp"
                android:button="@null"
                android:drawableTop="@drawable/x"
                android:text="消息"
                android:gravity="center"
                android:id="@+id/radio2"
                />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:button="@null"
                android:textSize="28dp"
                android:drawableTop="@drawable/s"
                android:text="社区"
                android:gravity="center"
                android:id="@+id/radio3"
                />

        </RadioGroup>


    </LinearLayout>


    <!--    左侧边框-->

    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_gravity="left"
        android:orientation="vertical">




        <RelativeLayout
            android:background="@drawable/mybj"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="33dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/celaname"
                android:onClick="name"
                android:text="12312312"/>


        </RelativeLayout>



        
        
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/myshoucang"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"/>

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_22"
                    android:text="我的收藏"
                    android:id="@+id/zixun_shoucang"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/myguanzhu"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"/>

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_22"
                    android:text="我的关注"
                    android:id="@+id/zixun_guanzhu"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/mytiezi"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"/>


                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_22"
                    android:text="我的帖子"
                    android:id="@+id/zixun_tiezi"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/mytongzhi"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"/>

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_22"
                    android:text="我的通知"
                    android:id="@+id/zixun_tongzhi"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/myjifen"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"/>

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_22"
                    android:text="我的积分"
                    android:id="@+id/zixun_jifen"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/myrenwu"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"/>


                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_22"
                    android:text="我的任务"
                    android:id="@+id/zixun_renwu"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/myshezhi"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"/>


                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_22"
                    android:text="设置"
                    android:id="@+id/zixun_shezhi"/>

            </LinearLayout>



        </LinearLayout>
        
        




    </LinearLayout>



    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_right"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_25"
            android:id="@+id/selct_fenlei"
            android:textColor="#000000"
            android:text="选择新区分类"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyc_zixun_right"/>


    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>