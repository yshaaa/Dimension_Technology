<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/sheqv_headPic"
        />

    <TextView
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/sheqv_headPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sheqv_nickName"
        android:textColor="#BD1818"
        android:text="花花"
        />

    <TextView
        android:layout_marginTop="@dimen/dp_32"
        android:layout_toRightOf="@id/sheqv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sheqv_publishTime"
        android:text="1分钟前"
        android:layout_marginLeft="@dimen/dp_20"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sheqv_content"
        android:layout_below="@id/sheqv_headPic"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        />

    <ImageView
        android:layout_below="@id/sheqv_content"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_50"
        android:id="@+id/sheqv_file"
        />
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@drawable/xx1"
        android:layout_below="@id/sheqv_file"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_toLeftOf="@id/zan"
        android:id="@+id/pinglun"
        />
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@mipmap/zan_b"
        android:layout_below="@id/sheqv_file"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:id="@+id/zan"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/zan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="花花"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/content"
                android:text="奥利给"
                />

        </LinearLayout>



          <TextView
              android:layout_marginLeft="@dimen/dp_150"
              android:gravity="center_horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="快来评论阿～～"
              />




    </LinearLayout>


</RelativeLayout>